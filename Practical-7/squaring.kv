BoxLayout:
    orientation: 'vertical'

    BoxLayout:
#        orientation: 'vertical'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            font_size: 28
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1,.714,.757, 1)

    BoxLayout:

        Label:
            text: 'Enter a number and press "Square"'
            font_size: 22
